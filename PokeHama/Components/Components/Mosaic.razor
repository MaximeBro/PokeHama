@using PokeHama.Extensions
<div style="width: 100%; height: 100%; position: relative!important;">
    <MudLink Href="@($"/overview/{Url.Replace(Hardcoded.IconUrl, string.Empty).Replace(".png", string.Empty)}")">
        <MudImage Class="pixel-rendered pokemon-item centered" Src="@Url" Style="width: 320px; height: auto;"/>
    </MudLink>
</div>

@code {
    [Parameter]
    public string Url { get; set; } = null!;
}